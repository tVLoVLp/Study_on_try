<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/test_result_tr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/right_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/count_tr"
        android:layout_width="39dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/text_result_b_tr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/right_word"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:id="@+id/ln_tr"
        android:layout_below="@+id/right_translate"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <Button
            android:id="@+id/answer_one_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="@string/answer_1"
            android:textColor="@color/colorWhite"
            android:layout_margin="8dp"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/answer_two_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/answer_one"
            android:text="@string/answer_2" />





    </LinearLayout>

    <Button
        android:id="@+id/answer_three_tr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="146dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:text="@string/answer_3"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/next_tr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:background="@drawable/next"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>